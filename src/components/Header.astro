---
interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;

const navItems = [
  { href: "/", label: "Home" },
  { href: "/industries", label: "Industries" },
  {
    label: "Services",
    href: "#",
    children: [
      { href: "/services/product-engineering", label: "Product Engineering" },
      { href: "/services/supply-chain", label: "Supply Chain" },
      { href: "/services/manufacturing", label: "Manufacturing" },
      {
        href: "/services/quality-regulatory-compliance",
        label: "Quality & Compliance",
      },
      { href: "/services/clinical-affairs", label: "Clinical Affairs" },
    ],
  },
  { href: "/digital-solutions", label: "Digital" },
  { href: "/careers", label: "Careers" },
];
---

<header class="site-header">
  <div class="header-inner glass-panel">
    <a href="/" class="logo">
      <span class="logo-icon">N</span>
      <span class="logo-text">NovintiX</span>
    </a>

    <nav class="site-navigation">
      <ul class="menu">
        {
          navItems.map((item) => (
            <li
              class={`menu-item ${item.children ? "has-children" : ""} ${currentPage === item.href || (item.children && item.children.some((c) => currentPage === c.href)) ? "current" : ""}`}
            >
              <a href={item.href}>
                {item.label}
                {item.children && (
                  <svg
                    class="chevron"
                    width="12"
                    height="12"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="3"
                  >
                    <path d="M6 9l6 6 6-6" />
                  </svg>
                )}
              </a>
              {item.children && (
                <div class="dropdown glass-panel">
                  <ul class="sub-menu">
                    {item.children.map((child) => (
                      <li
                        class={`sub-menu-item ${currentPage === child.href ? "current" : ""}`}
                      >
                        <a href={child.href}>{child.label}</a>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </li>
          ))
        }
      </ul>
    </nav>

    <div class="header-actions">
      {
        currentPage !== "/contact-us" && (
          <a href="/contact-us" class="btn btn-primary btn-sm">
            Get in Touch
          </a>
        )
      }

      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span class="hamburger"></span>
      </button>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 1.5rem;
    left: 0;
    right: 0;
    z-index: 1000;
    display: flex;
    justify-content: center;
    padding: 0 1rem;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    height: 72px;
    padding: 0 1rem 0 1.5rem;
    border-radius: var(--radius-full);
    transition: all var(--transition-base);
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    z-index: 10;
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--gradient-brand);
    color: #fff;
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 800;
    border-radius: 8px;
    box-shadow: 0 0 15px rgba(56, 189, 248, 0.4);
  }

  .logo-text {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-main);
    letter-spacing: -0.02em;
  }

  /* Navigation */
  .site-navigation .menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 0.5rem;
  }

  .menu-item > a {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    padding: 0.625rem 1rem;
    border-radius: var(--radius-full);
    transition: all 0.2s ease;
  }

  .menu-item > a:hover,
  .menu-item.current > a {
    color: #fff;
    background: rgba(255, 255, 255, 0.08);
  }

  .menu-item.current > a {
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .chevron {
    opacity: 0.6;
    transition: transform 0.2s;
  }

  .menu-item:hover .chevron {
    transform: rotate(180deg);
  }

  /* Dropdown */
  .menu-item.has-children {
    position: relative;
    padding-bottom: 20px; /* Bridge to dropdown */
    margin-bottom: -20px;
  }

  .dropdown {
    position: absolute;
    top: calc(100% + 1rem); /* Increased gap */
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    width: 260px;
    padding: 0.5rem;
    border-radius: var(--radius-lg);
    opacity: 0;
    visibility: hidden;
    background: #0f172a; /* Fallback */
    background: rgba(15, 23, 42, 0.95); /* High opacity dark blue */
    backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    z-index: 1000; /* Ensure it stays on top */
  }

  .menu-item.has-children:hover .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .sub-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sub-menu-item a {
    display: block;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    transition: all 0.2s;
  }

  .sub-menu-item a:hover {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-accent-primary);
    transform: translateX(4px);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn-sm {
    padding: 0.625rem 1.5rem;
    font-size: 0.875rem;
  }

  /* Hamberger */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: #fff;
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background: #fff;
    position: relative;
    transition: all 0.3s;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #fff;
    left: 0;
    transition: all 0.3s;
  }

  .hamburger::before {
    top: -8px;
  }
  .hamburger::after {
    top: 8px;
  }

  .mobile-menu-toggle.active .hamburger {
    background: transparent;
  }
  .mobile-menu-toggle.active .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }
  .mobile-menu-toggle.active .hamburger::after {
    top: 0;
    transform: rotate(-45deg);
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .site-header {
      top: 1rem;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .site-navigation {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--color-bg-main);
      padding: 6rem 1.5rem 2rem;
      transform: translateX(100%);
      transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      z-index: -1;
      overflow-y: auto;
    }

    .site-navigation.active {
      transform: translateX(0);
    }

    .site-navigation .menu {
      flex-direction: column;
      gap: 0.5rem;
    }

    .menu-item > a {
      font-size: 1.25rem;
      padding: 1rem 0;
      justify-content: space-between;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 0;
    }

    .menu-item > a:hover {
      background: transparent;
      color: var(--color-accent-primary);
    }

    .dropdown {
      position: static;
      opacity: 1;
      visibility: visible;
      transform: none;
      width: 100%;
      background: transparent;
      box-shadow: none;
      border: none;
      padding: 0;
      backdrop-filter: none;
    }

    .sub-menu {
      padding-left: 1rem;
      border-left: 1px solid rgba(255, 255, 255, 0.1);
      margin-top: 0.5rem;
    }

    .sub-menu-item a {
      color: var(--color-text-muted);
    }

    .header-actions .btn {
      display: none;
    }
  }
</style>

<script>
  const toggle = document.querySelector(".mobile-menu-toggle");
  const nav = document.querySelector(".site-navigation");
  const header = document.querySelector(".site-header");

  toggle?.addEventListener("click", () => {
    toggle.classList.toggle("active");
    nav?.classList.toggle("active");
    document.body.style.overflow = nav?.classList.contains("active")
      ? "hidden"
      : "";
  });

  // Make header compact on scroll
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.querySelector(".header-inner")?.classList.add("compact");
    } else {
      header?.querySelector(".header-inner")?.classList.remove("compact");
    }
  });
</script>
