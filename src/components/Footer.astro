<style>
  .site-footer {
    background: var(--color-bg-surface);
    color: var(--color-text-secondary);
    padding: 5rem 0 2rem;
    border-top: 1px solid var(--color-border);
  }

  .footer-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 4rem;
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .footer-brand {
    max-width: 380px;
  }

  .footer-logo .logo-text {
    font-family: var(--font-heading);
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--color-text-main);
    letter-spacing: -0.03em;
  }

  .footer-tagline {
    font-size: 0.8125rem;
    color: #f5a302; /* Brand Orange */
    margin-top: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 700;
  }

  .footer-description {
    margin-top: 1.75rem;
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    opacity: 0.9;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-column h5 {
    font-family: var(--font-heading);
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text-main);
    margin-bottom: 1.5rem;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column li {
    margin-bottom: 0.75rem;
  }

  .footer-column a {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    transition: all 0.2s;
  }

  .footer-column a:hover {
    color: #f5a302; /* Orange Hover */
  }

  .contact-info li {
    margin-bottom: 1rem;
  }

  .contact-info strong {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-main);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
    font-weight: 700;
  }

  .contact-info a {
    color: #f5a302; /* Orange Link */
  }

  .contact-info span {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }

  .footer-bottom {
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright,
  .footer-legal a {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-legal a:hover {
    color: #f5a302; /* Orange Hover */
  }

  .separator {
    color: var(--color-border);
  }

  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
