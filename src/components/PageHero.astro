---
interface Props {
  title: string;
  description?: string;
  icon?: string;
}

const { title, description, icon = 'default' } = Astro.props;

// Icon paths for different page types
const icons: Record<string, string> = {
  careers: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
    <circle cx="9" cy="7" r="4"></circle>
    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
  </svg>`,
  industries: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
  </svg>`,
  services: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
    <path d="M2 17l10 5 10-5"></path>
    <path d="M2 12l10 5 10-5"></path>
  </svg>`,
  digital: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
    <line x1="8" y1="21" x2="16" y2="21"></line>
    <line x1="12" y1="17" x2="12" y2="21"></line>
  </svg>`,
  contact: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
  </svg>`,
  default: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <circle cx="12" cy="12" r="10"></circle>
    <path d="M12 6v6l4 2"></path>
  </svg>`
};

const selectedIcon = icons[icon] || icons.default;
---

<section class="page-hero">
  <div class="page-hero-bg">
    <div class="hero-glass"></div>
    <div class="hero-icon-bg" set:html={selectedIcon}></div>
    <div class="hero-gradient-orb hero-orb-1"></div>
    <div class="hero-gradient-orb hero-orb-2"></div>
  </div>
  <div class="container">
    <div class="page-hero-content">
      <h1>{title}</h1>
      {description && <p class="hero-description">{description}</p>}
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    min-height: 300px;
    display: flex;
    align-items: center;
    padding: 7rem 0 3.5rem;
    overflow: hidden;
    background: linear-gradient(135deg, #0F172A 0%, #1E293B 50%, #0F172A 100%);
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .hero-glass {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.02) 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    backdrop-filter: blur(100px);
  }

  .hero-icon-bg {
    position: absolute;
    right: 5%;
    top: 50%;
    transform: translateY(-50%);
    width: 320px;
    height: 320px;
    color: rgba(99, 102, 241, 0.08);
    opacity: 1;
  }

  .hero-icon-bg :global(svg) {
    width: 100%;
    height: 100%;
  }

  .hero-gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .hero-orb-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
    top: -150px;
    right: 10%;
  }

  .hero-orb-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, #A855F7 0%, #6366F1 100%);
    bottom: -100px;
    left: -50px;
  }

  .page-hero .container {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .page-hero-content {
    max-width: 800px;
  }

  .page-hero-content h1 {
    color: #fff;
    font-size: clamp(2.25rem, 4.5vw, 3rem);
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .hero-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .hero-icon-bg {
      width: 250px;
      height: 250px;
      right: 2%;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: 240px;
      padding: 6rem 0 2.5rem;
    }

    .hero-icon-bg {
      width: 180px;
      height: 180px;
      right: -20px;
      opacity: 0.5;
    }

    .hero-orb-1 {
      width: 250px;
      height: 250px;
      top: -100px;
    }

    .hero-orb-2 {
      width: 200px;
      height: 200px;
      bottom: -80px;
    }

    .hero-description {
      font-size: 1rem;
    }
  }
</style>
