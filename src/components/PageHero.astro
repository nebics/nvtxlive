---
interface Props {
  title: string;
  description?: string;
  icon?: string;
}

const { title, description, icon = "default" } = Astro.props;

// Icon paths for different page types
const icons: Record<string, string> = {
  careers: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
    <circle cx="9" cy="7" r="4"></circle>
    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
  </svg>`,
  industries: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
  </svg>`,
  services: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
    <path d="M2 17l10 5 10-5"></path>
    <path d="M2 12l10 5 10-5"></path>
  </svg>`,
  digital: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
    <line x1="8" y1="21" x2="16" y2="21"></line>
    <line x1="12" y1="17" x2="12" y2="21"></line>
  </svg>`,
  contact: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
  </svg>`,
  default: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <circle cx="12" cy="12" r="10"></circle>
    <path d="M12 6v6l4 2"></path>
  </svg>`,
};

const selectedIcon = icons[icon] || icons.default;
---

<section class="page-hero">
  <div class="page-hero-bg">
    <div class="hero-glass"></div>
    <div class="hero-icon-bg" set:html={selectedIcon} />
    <div class="hero-gradient-orb hero-orb-1"></div>
    <div class="hero-gradient-orb hero-orb-2"></div>
  </div>
  <div class="container">
    <div class="page-hero-content">
      <h1>{title}</h1>
      {description && <p class="hero-description">{description}</p>}
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 8rem 1.5rem 6rem;
    overflow: hidden;
    background: var(--color-bg-main);
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  /* Gradient Background (Default) */
  .page-hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #020617 0%, #0f172a 100%);
  }

  .hero-glass {
    position: absolute;
    inset: 0;
    backdrop-filter: blur(100px); /* Just a general atmosphere blur */
    z-index: 1;
  }

  .hero-icon-bg {
    position: absolute;
    right: 5%;
    top: 50%;
    transform: translateY(-50%);
    width: 400px;
    height: 400px;
    color: rgba(56, 189, 248, 0.03);
    z-index: 0;
    pointer-events: none;
  }

  .hero-icon-bg :global(svg) {
    width: 100%;
    height: 100%;
  }

  .hero-gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    z-index: 0;
  }

  .hero-orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      var(--color-accent-secondary) 0%,
      transparent 70%
    );
    top: -200px;
    left: 20%;
  }

  .hero-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      var(--color-accent-primary) 0%,
      transparent 70%
    );
    bottom: -150px;
    right: 10%;
  }

  .page-hero .container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 900px;
  }

  .page-hero-content h1 {
    color: #fff;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-description {
    color: var(--color-text-secondary);
    font-size: 1.25rem;
    line-height: 1.7;
    margin: 0 auto;
    max-width: 700px;
  }

  @media (max-width: 1024px) {
    .hero-icon-bg {
      width: 300px;
      height: 300px;
      right: -10%;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      min-height: auto;
      padding: 7rem 1.5rem 4rem;
    }

    .hero-icon-bg {
      display: none;
    }

    .hero-description {
      font-size: 1.125rem;
    }
  }
</style>
