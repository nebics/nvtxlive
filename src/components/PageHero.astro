---
interface Props {
  title: string;
  description?: string;
  icon?: string;
}

const { title, description, icon = "default" } = Astro.props;

// Icon paths for different page types
const icons: Record<string, string> = {
  careers: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
    <circle cx="9" cy="7" r="4"></circle>
    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
  </svg>`,
  industries: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
  </svg>`,
  services: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
    <path d="M2 17l10 5 10-5"></path>
    <path d="M2 12l10 5 10-5"></path>
  </svg>`,
  digital: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
    <line x1="8" y1="21" x2="16" y2="21"></line>
    <line x1="12" y1="17" x2="12" y2="21"></line>
  </svg>`,
  contact: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
  </svg>`,
  default: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <circle cx="12" cy="12" r="10"></circle>
    <path d="M12 6v6l4 2"></path>
  </svg>`,
};

const selectedIcon = icons[icon] || icons.default;
---

<section class="page-hero">
  <div class="page-hero-bg">
    <div class="hero-glass"></div>
    <div class="hero-icon-bg" set:html={selectedIcon} />
    <div class="hero-gradient-orb hero-orb-1"></div>
    <div class="hero-gradient-orb hero-orb-2"></div>
  </div>
  <div class="container relative z-10">
    <div class="page-hero-grid">
      <div class="page-hero-content animate-fade-in-up">
        <h1>{title}</h1>
        {description && <p class="hero-description">{description}</p>}
      </div>
      <!-- Spacer for the large icon on the right -->
      <div class="page-hero-visual"></div>
    </div>
  </div>
  <!-- Enhanced Glass Border Separator -->
  <div class="hero-separator">
    <div class="separator-glow"></div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    /* Dynamic height: at least 45vh, but adapts to content */
    min-height: clamp(450px, 50vh, 700px);
    display: flex;
    align-items: center;
    overflow: hidden;
    /* Responsive padding: large on desktop, tighter on mobile */
    padding: clamp(8rem, 12vh, 12rem) 0 clamp(4rem, 6vh, 6rem);
    background: var(--color-bg-main);
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    /* Ultra-Light Sky Blue Theme */
    background:
      /* Very Faint Hex Grid */
      radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 1) 0%,
        rgba(255, 255, 255, 0) 60%
      ),
      repeating-linear-gradient(
        60deg,
        rgba(56, 189, 248, 0.03) 0,
        rgba(56, 189, 248, 0.03) 1px,
        transparent 1px,
        transparent 40px
      ),
      repeating-linear-gradient(
        -60deg,
        rgba(56, 189, 248, 0.03) 0,
        rgba(56, 189, 248, 0.03) 1px,
        transparent 1px,
        transparent 40px
      ),
      /* Ultra-Light Sky Gradient Base */
      linear-gradient(150deg, #ffffff 0%, #f0f9ff 50%, #e0f2fe 100%);
    background-size:
      100% 100%,
      100px 174px,
      100px 174px,
      100% 100%;
    z-index: 0;
  }

  .page-hero-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(56, 189, 248, 0.05) 0%,
      transparent 100%
    );
    z-index: 1;
  }

  .hero-glass {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at 15% 50%,
      rgba(2, 6, 23, 0) 0%,
      rgba(2, 6, 23, 0.9) 100%
    );
    z-index: 1;
  }

  /* Enhanced Separator */
  .hero-separator {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    z-index: 10;
  }

  .separator-glow {
    position: absolute;
    bottom: 0;
    left: 10%;
    right: 10%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent-primary),
      transparent
    );
    box-shadow: 0 -2px 10px var(--color-accent-primary);
    opacity: 0.7;
  }

  /* Large Creative Icon Background */
  .hero-icon-bg {
    position: absolute;
    right: -10%;
    top: 50%;
    transform: translateY(-50%) rotate(-15deg);
    width: 50vh;
    height: 50vh;
    color: rgba(56, 189, 248, 0.05);
    z-index: 0;
    transition: all 0.5s ease-out;
  }

  .hero-gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.25;
    z-index: 0;
  }

  .hero-orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      var(--color-accent-primary) 0%,
      transparent 70%
    );
    top: -20%;
    left: -10%;
  }

  .hero-orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      var(--color-accent-secondary) 0%,
      transparent 70%
    );
    bottom: -10%;
    right: 10%;
  }

  .page-hero-grid {
    display: grid;
    /* Adjusted grid to give more space to text */
    grid-template-columns: 1.5fr 0.5fr;
    gap: 2rem;
    align-items: center;
  }

  .page-hero-content {
    position: relative;
    z-index: 2;
  }

  .page-hero-content h1 {
    color: #fff;
    font-size: clamp(2.5rem, 5vw, 4rem); /* Slightly adjusted for better fit */
    font-weight: 800;
    line-height: 1.05;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
    background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0.8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-description {
    color: var(--color-text-secondary);
    font-size: 1.25rem;
    line-height: 1.7;
    /* Increased max-width significantly to use breadth */
    max-width: 800px;
    border-left: 1px solid var(--color-accent-primary);
    padding-left: 2rem;
  }

  /* Animation */
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1024px) {
    .page-hero {
      min-height: auto;
      padding: 9rem 0 5rem;
    }

    .page-hero-grid {
      grid-template-columns: 1fr;
    }

    .page-hero-visual {
      display: none;
    }

    .hero-icon-bg {
      right: -10%;
      width: 40vh;
      height: 40vh;
      opacity: 0.1;
    }
  }

  @media (max-width: 768px) {
    .page-hero-content h1 {
      font-size: 2.25rem;
    }

    .hero-description {
      font-size: 1.125rem;
      padding-left: 1.5rem;
    }
  }
</style>
