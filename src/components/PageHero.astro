---
interface Props {
  title: string;
  description?: string;
  backgroundImage?: string;
}

const { title, description, backgroundImage = '/images/industry-bg.jpg' } = Astro.props;
---

<section class="page-hero" style={`background-image: url('${backgroundImage}')`}>
  <div class="page-hero-overlay"></div>
  <div class="page-hero-content">
    <h1>{title}</h1>
    {description && <p>{description}</p>}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    padding: 100px 20px 50px;
  }

  .page-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, #1E2128 0%, rgba(30, 33, 40, 0.85) 100%);
  }

  .page-hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
  }

  .page-hero-content h1 {
    color: #fff;
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  .page-hero-content p {
    color: rgba(255,255,255,0.85);
    font-size: 1.1rem;
    margin: 0;
  }

  @media (max-width: 767px) {
    .page-hero {
      min-height: 160px;
      padding: 80px 15px 40px;
    }

    .page-hero-content h1 {
      font-size: 1.8rem;
    }

    .page-hero-content p {
      font-size: 1rem;
    }
  }
</style>
