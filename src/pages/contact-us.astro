---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
---

<BaseLayout title="Contact Us" currentPage="/contact-us">
  <PageHero
    title="Contact Us"
    description="Let's Start a Conversation"
    backgroundImage="/images/contact-bg.jpg"
  />

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <div class="info-card">
            <h6>Get In Touch</h6>
            <h2>We'd Love to Hear From You</h2>
            <div class="divider"></div>

            <div class="contact-item">
              <h5>Email</h5>
              <p><a href="mailto:info@novintix.com">info@novintix.com</a></p>
            </div>

            <div class="contact-item">
              <h5>Phone</h5>
              <p>Contact us for details</p>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <div class="form-card">
            <h6>Send Us a Message</h6>
            <h3>How Can We Help?</h3>

            <form class="contact-form" action="#" method="POST">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName">First Name *</label>
                  <input type="text" id="firstName" name="firstName" required />
                </div>
                <div class="form-group">
                  <label for="lastName">Last Name *</label>
                  <input type="text" id="lastName" name="lastName" required />
                </div>
              </div>

              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required />
              </div>

              <div class="form-group">
                <label for="company">Company</label>
                <input type="text" id="company" name="company" />
              </div>

              <div class="form-group">
                <label for="subject">Subject *</label>
                <input type="text" id="subject" name="subject" required />
              </div>

              <div class="form-group">
                <label for="message">Message *</label>
                <textarea id="message" name="message" rows="5" required></textarea>
              </div>

              <button type="submit" class="btn">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="map-section">
    <div class="container">
      <div class="section-header">
        <h6>Our Presence</h6>
        <h2>Global Reach, Local Expertise</h2>
        <p>NovintiX serves clients worldwide with offices strategically located to provide localized support and expertise.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-section {
    padding: 5em 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 50px;
    align-items: start;
  }

  .info-card {
    background: #fff;
    border-radius: 25px;
    box-shadow: 0 0 60px rgba(0, 0, 0, 0.08);
    padding: 2.5em;
  }

  .info-card h6 {
    color: #F5A302;
    margin-bottom: 10px;
  }

  .info-card h2 {
    margin-bottom: 20px;
  }

  .divider {
    width: 100%;
    height: 1px;
    background: #D3D3DC;
    margin: 20px 0;
  }

  .contact-item {
    margin-bottom: 20px;
  }

  .contact-item h5 {
    margin-bottom: 5px;
  }

  .contact-item p {
    color: #7C7C7D;
  }

  .contact-item a {
    color: #033C59;
  }

  .contact-item a:hover {
    color: #F5A302;
  }

  .form-card {
    background: #fff;
    border-radius: 25px;
    box-shadow: 0 0 60px rgba(0, 0, 0, 0.08);
    padding: 2.5em;
  }

  .form-card h6 {
    color: #F5A302;
    margin-bottom: 10px;
  }

  .form-card h3 {
    margin-bottom: 25px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #1E2128;
    margin-bottom: 8px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 12px 16px;
    font-size: 16px;
    font-family: inherit;
    border: 1px solid #D3D3DC;
    border-radius: 10px;
    background: #F8F8F9;
    transition: border-color 0.3s ease, background 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #F5A302;
    background: #fff;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-form .btn {
    width: 100%;
  }

  .map-section {
    padding: 5em 0;
    background: #f8f8f9;
  }

  .map-section .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .map-section .section-header h6 {
    color: #F5A302;
    margin-bottom: 10px;
  }

  .map-section .section-header p {
    color: #7C7C7D;
    margin-top: 15px;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 767px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
