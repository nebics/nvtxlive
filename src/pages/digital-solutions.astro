---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/PageHero.astro";

const solutions = [
  {
    title: "Connected Healthcare",
    desc: "Seamlessly integrate systems to connect providers, patients, and devices for holistic care.",
    icon: "activity",
  },
  {
    title: "Intelligent Automation",
    desc: "Reduce manual effort and error with AI-driven process automation and smart workflows.",
    icon: "cpu",
  },
  {
    title: "Internet of Medical Things",
    desc: "Real-time monitoring and data collection from connected medical devices and wearables.",
    icon: "wifi",
  },
  {
    title: "Data Analytics & AI",
    desc: "Turn raw data into actionable insights for clinical and operational decision-making.",
    icon: "bar-chart",
  },
  {
    title: "AR/VR Experiences",
    desc: "Immersive immersive training and patient education through cutting-edge augmented reality.",
    icon: "layers",
  },
  {
    title: "Telemedicine Platforms",
    desc: "Secure, scalable infrastructure for remote care and virtual consultations.",
    icon: "video",
  },
];
---

<BaseLayout title="Digital Solutions" currentPage="/digital-solutions">
  <PageHero
    icon="digital"
    title="Digital Solutions"
    description="Cutting-edge technology and data analytics to transform life sciences operations."
  />

  <section class="section">
    <div class="container relative z-10">
      <!-- Feature Row: Intro -->
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Digital Transformation</span>
          <h2>Data-Driven Innovation</h2>
          <p class="lead">
            The application of data analytics in life sciences is evolving
            rapidly. We help you navigate this transformation with confidence,
            leveraging cloud-native architectures and AI to unlock new value.
          </p>

          <div class="stats-container">
            <div class="stat-item">
              <span class="stat-number">40%</span>
              <span class="stat-label">Efficiency Gains</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-number">100%</span>
              <span class="stat-label">Compliance</span>
            </div>
          </div>
        </div>

        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <svg
                width="64"
                height="64"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
                ></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <path d="M12 18v-6"></path>
                <path d="M8 15l4 3 4-3"></path>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions Grid -->
  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>End-to-End Capabilities</h2>
        <p>From infrastructure to interface, we build for the future.</p>
      </div>

      <div class="solutions-grid">
        {
          solutions.map((sol) => (
            <div class="solution-card">
              <div class="solution-header">
                <div class="icon-box">
                  {sol.icon === "activity" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                    </svg>
                  )}
                  {sol.icon === "cpu" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <rect x="4" y="4" width="16" height="16" rx="2" ry="2" />
                      <rect x="9" y="9" width="6" height="6" />
                      <line x1="9" y1="1" x2="9" y2="4" />
                      <line x1="15" y1="1" x2="15" y2="4" />
                      <line x1="9" y1="20" x2="9" y2="23" />
                      <line x1="15" y1="20" x2="15" y2="23" />
                    </svg>
                  )}
                  {sol.icon === "wifi" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                      <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                      <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                      <line x1="12" y1="20" x2="12.01" y2="20" />
                    </svg>
                  )}
                  {sol.icon === "bar-chart" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <line x1="18" y1="20" x2="18" y2="10" />
                      <line x1="12" y1="20" x2="12" y2="4" />
                      <line x1="6" y1="20" x2="6" y2="14" />
                    </svg>
                  )}
                  {sol.icon === "layers" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <polygon points="12 2 2 7 12 12 22 7 12 2" />
                      <polyline points="2 17 12 22 22 17" />
                      <polyline points="2 12 12 17 22 12" />
                    </svg>
                  )}
                  {sol.icon === "video" && (
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <polygon points="23 7 16 12 23 17 23 7" />
                      <rect x="1" y="5" width="15" height="14" rx="2" ry="2" />
                    </svg>
                  )}
                </div>
                <h3>{sol.title}</h3>
              </div>
              <p>{sol.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Scoped Layout Styles --- */

  .section {
    padding: 6rem 0;
    position: relative;
  }

  .section-darker {
    background: #f1f5f9; /* Light Gray */
  }

  /* Two Column Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }

  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: var(--color-text-main); /* Dark Slate */
  }

  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(14, 165, 233, 0.1);
  }

  /* Stats */
  .stats-container {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-accent-primary);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: var(--color-border);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }

  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #fff; /* White icon bg */
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(14, 165, 233, 0.15); /* Soft blue shadow */
    border: 1px solid var(--color-border);
  }

  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(14, 165, 233, 0.3);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }

  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(14, 165, 233, 0.1) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }

  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }

  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-main);
  }

  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .solution-card {
    background: #fff;
    border: 1px solid var(--color-border);
    padding: 2.5rem;
    border-radius: 1rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
    box-shadow: var(--shadow-sm);
  }

  .solution-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent-primary);
    box-shadow: var(--shadow-lg);
  }

  .solution-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(14, 165, 233, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    flex-shrink: 0;
  }

  .solution-card h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--color-text-main);
    font-weight: 600;
  }

  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }

  /* Responsive Constraints */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }

    .feature-content {
      order: 2;
    }

    .stats-container {
      justify-content: center;
    }

    .feature-visual {
      order: 1;
    }

    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }

    .cta-box {
      padding: 2rem;
    }
  }
</style>
