---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home" currentPage="/">
  <!-- Hero Section with Rotating Background -->
  <section class="hero">
    <!-- Slideshow Background -->
    <div class="hero-slideshow">
      <div class="slide slide-1"></div>
      <div class="slide slide-2"></div>
      <div class="slide slide-3"></div>
      <div class="slide slide-4"></div>
    </div>
    <div class="hero-overlay"></div>

    <div class="container">
      <div class="hero-content">
        <span class="badge">
          <span class="badge-dot"></span>
          Life Sciences Consulting
        </span>
        <h1>
          Accelerate Transformation<br />To Shape Your <span class="text-highlight">Future</span>
        </h1>
        <p class="hero-description">
          Let's Embark on a Journey with NOVINTIX - Discover Innovation,
          Embrace Transformation, and Unlock Your Business's Full Potential.
        </p>
        <div class="hero-actions">
          <a href="/contact-us" class="btn-primary">
            Start Your Project
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="/industries" class="btn-secondary">Explore Industries</a>
        </div>
        <!-- Inline Stats -->
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">15+</span>
            <span class="stat-label">Years Experience</span>
          </div>
          <div class="stat">
            <span class="stat-number">200+</span>
            <span class="stat-label">Projects Delivered</span>
          </div>
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Expert Consultants</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Clients Section -->
  <section class="clients-section">
    <div class="container">
      <p class="clients-label">Trusted by industry leaders</p>
      <div class="clients-grid">
        <div class="client-logo">
          <img src="/images/johnson.png" alt="Johnson & Johnson" />
        </div>
        <div class="client-logo">
          <img src="/images/medtronic.png" alt="Medtronic" />
        </div>
        <div class="client-logo">
          <img src="/images/stryker.png" alt="Stryker" />
        </div>
        <div class="client-logo">
          <img src="/images/B-braun.png" alt="B. Braun" />
        </div>
        <div class="client-logo">
          <img src="/images/dentsply.png" alt="Dentsply" />
        </div>
        <div class="client-logo">
          <img src="/images/janseen.png" alt="Janssen" />
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section section">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <h6 class="text-accent font-bold tracking-widest uppercase mb-2">
            Why NovintiX
          </h6>
          <h2>Your Partner in Life Sciences Innovation</h2>
          <p class="about-lead">
            We bring deep industry knowledge, hands-on expertise, and a
            commitment to your success. Our team has walked in your shoes—we
            understand the challenges of bringing products to market.
          </p>
          <div class="about-features">
            <div class="feature">
              <div class="feature-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
              </div>
              <div>
                <h5>Proven Track Record</h5>
                <p>
                  200+ successful projects across medical devices, pharma, and
                  biotech.
                </p>
              </div>
            </div>
            <div class="feature">
              <div class="feature-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              </div>
              <div>
                <h5>Industry Veterans</h5>
                <p>
                  Our consultants average 15+ years at leading life sciences
                  companies.
                </p>
              </div>
            </div>
            <div class="feature">
              <div class="feature-icon">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div>
                <h5>Faster Time to Market</h5>
                <p>
                  Streamlined processes that reduce development cycles by 30%.
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="about-image">
          <img
            src="/images/Corporate_Differentiator.jpg"
            alt="Team collaboration"
          />
          <div class="about-card">
            <div class="about-card-icon">
              <svg
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
            </div>
            <h4 class="text-3xl font-bold mb-1">98%</h4>
            <p class="text-sm opacity-90">Client Satisfaction</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section section section-light">
    <div class="container">
      <div class="section-header">
        <h6>Our Services</h6>
        <h2>End-to-End Solutions for Life Sciences</h2>
        <p>
          From concept to commercialization, we provide the expertise you need
          at every stage.
        </p>
      </div>
      <div class="services-grid">
        <a href="/services/product-engineering" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="3"></circle>
              <path
                d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"
              ></path>
            </svg>
          </div>
          <h4>Product Engineering</h4>
          <p>
            Design and develop innovative medical devices and healthcare
            products from concept to launch.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>

        <a href="/services/supply-chain" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
          </div>
          <h4>Supply Chain</h4>
          <p>
            Optimize your supply network for resilience, efficiency, and
            regulatory compliance.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>

        <a href="/services/manufacturing" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M2 20h20"></path>
              <path
                d="M5 20V8.5a2.5 2.5 0 0 1 2.5-2.5h9a2.5 2.5 0 0 1 2.5 2.5V20"
              ></path>
              <path d="M9 20v-5a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v5"></path>
            </svg>
          </div>
          <h4>Manufacturing</h4>
          <p>
            Transform operations with lean manufacturing, automation, and
            quality excellence.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>

        <a href="/services/quality-regulatory-compliance" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M9 11l3 3L22 4"></path>
              <path
                d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"
              ></path>
            </svg>
          </div>
          <h4>Quality & Compliance</h4>
          <p>
            Navigate FDA, EU MDR, and global regulations with confidence and
            speed.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>

        <a href="/services/clinical-affairs" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
            </svg>
          </div>
          <h4>Clinical Affairs</h4>
          <p>
            Plan and execute clinical trials that generate the evidence you need
            for approval.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>

        <a href="/digital-solutions" class="service-card">
          <div class="service-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <h4>Digital Solutions</h4>
          <p>
            Leverage AI, data analytics, and digital tools to accelerate
            innovation.
          </p>
          <span class="service-link">Learn more <span>→</span></span>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-bg"></div>
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Accelerate Your Product Journey?</h2>
        <p>
          Let's discuss how we can help you overcome challenges and reach your
          goals faster.
        </p>
        <div class="cta-actions">
          <a href="/contact-us" class="btn btn-white">Get in Touch</a>
          <a
            href="/careers"
            class="btn btn-outline"
            style="border-color: rgba(255,255,255,0.3); color: white;"
            >Join Our Team</a
          >
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section with Rotating Background Slideshow */
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    min-height: 85vh;
    overflow: hidden;
  }

  /* Slideshow Background */
  .hero-slideshow {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0;
    animation: slideshow 20s infinite;
  }

  .slide-1 {
    background-image: url('/images/hero-innovation.jpg');
    animation-delay: 0s;
  }

  .slide-2 {
    background-image: url('/images/hero-skyline.jpg');
    animation-delay: 5s;
  }

  .slide-3 {
    background-image: url('/images/hero-infrastructure.jpg');
    animation-delay: 10s;
  }

  .slide-4 {
    background-image: url('/images/hero-collaboration.jpg');
    animation-delay: 15s;
  }

  @keyframes slideshow {
    0% {
      opacity: 0;
      transform: scale(1);
    }
    5% {
      opacity: 1;
    }
    25% {
      opacity: 1;
      transform: scale(1.08);
    }
    30% {
      opacity: 0;
      transform: scale(1.08);
    }
    100% {
      opacity: 0;
      transform: scale(1);
    }
  }

  /* Dark overlay for text readability */
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(15, 23, 42, 0.85) 0%,
      rgba(15, 23, 42, 0.7) 50%,
      rgba(15, 23, 42, 0.6) 100%
    );
    z-index: 1;
  }

  .hero .container {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    max-width: 720px;
    text-align: center;
  }

  .hero .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem;
    background: rgba(245, 163, 2, 0.15);
    color: #F5A302;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(245, 163, 2, 0.3);
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: #F5A302;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .hero h1 {
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.15;
  }

  .text-highlight {
    color: #F5A302;
  }

  .hero-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #F5A302 0%, #ea580c 100%);
    color: #ffffff;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(245, 163, 2, 0.35);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(245, 163, 2, 0.5);
  }

  .btn-primary svg {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover svg {
    transform: translateX(4px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
  }

  /* Hero Stats - Bottom of hero */
  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 800;
    color: #ffffff;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Clients Section - Individual logo backgrounds */
  .clients-section {
    padding: 4rem 0;
    background: #ffffff;
  }

  .clients-label {
    text-align: center;
    font-size: 0.75rem;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .clients-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.25rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .client-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 1rem;
    background: #0f172a;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .client-logo:hover {
    background: #1e293b;
    transform: translateY(-2px);
  }

  .client-logo img {
    height: 28px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    opacity: 0.7;
    filter: grayscale(100%) brightness(0) invert(1);
    transition: all 0.3s ease;
  }

  .client-logo:hover img {
    opacity: 1;
  }

  /* About Section */
  .about-section {
    background: #fff;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
  }

  .about-content h6 {
    margin-bottom: 0.75rem;
  }

  .about-content h2 {
    margin-bottom: 1.5rem;
  }

  .about-lead {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
    line-height: 1.8;
  }

  .about-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .feature {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(245, 163, 2, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-accent-primary);
  }

  .feature h5 {
    margin-bottom: 0.25rem;
  }

  .feature p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
  }

  .about-image {
    position: relative;
  }

  .about-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: var(--radius-xl);
  }

  .about-card {
    position: absolute;
    bottom: -2rem;
    left: -2rem;
    background: var(--gradient-brand);
    color: #fff;
    padding: 2rem;
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: var(--shadow-lg);
  }

  .about-card-icon {
    margin-bottom: 0.5rem;
  }

  .about-card h4 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .about-card p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Services Section */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .service-card {
    display: block;
    background: var(--color-bg-main);
    border-radius: var(--radius-lg);
    padding: 2rem;
    text-decoration: none;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: transparent;
  }

  .service-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-brand);
    border-radius: var(--radius-md);
    color: #fff;
    margin-bottom: 1.25rem;
  }

  .service-card h4 {
    margin-bottom: 0.75rem;
    color: var(--color-text-main);
  }

  .service-card p {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin-bottom: 1.25rem;
    line-height: 1.6;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent-primary);
    transition: gap var(--transition-base);
  }

  .service-card:hover .service-link {
    gap: 0.75rem;
  }

  /* CTA Section */
  .cta-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: var(--gradient-brand);
  }

  .cta-bg::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(
      ellipse at center,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 60%
    );
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
