    <script is:inline>
      let currentUser = null;
      let currentFilter = "";
      let currentMessageId = null;
      let allMessages = [];

      async function checkAuth() {
        try {
          const res = await fetch("/api/admin/verify");
          const data = await res.json();
          if (!data.authenticated) { window.location.href = "/admin/login"; return false; }
          currentUser = data.user;
          document.getElementById("user-name").textContent = data.user.name;
          document.getElementById("user-avatar").textContent = data.user.name.charAt(0).toUpperCase();
          return true;
        } catch (e) { window.location.href = "/admin/login"; return false; }
      }

      document.getElementById("logout-btn").addEventListener("click", async () => {
        await fetch("/api/admin/logout", { method: "POST" });
        window.location.href = "/admin/login";
      });

      async function loadMessages(status = "") {
        const tbody = document.getElementById("messages-tbody");
        tbody.innerHTML = '<tr><td colspan="8"><div class="table-loading"><div class="spinner"></div>Loading messages...</div></td></tr>';

        try {
          const url = status ? `/api/admin/messages?status=${status}` : "/api/admin/messages";
          const res = await fetch(url);
          const data = await res.json();
          allMessages = data.messages;

          // Update stats
          document.getElementById("stat-unread").textContent = data.stats.unread;
          document.getElementById("stat-read").textContent = data.stats.read;
          document.getElementById("stat-archived").textContent = data.stats.archived;
          document.getElementById("stat-total").textContent = data.pagination.total;
          document.getElementById("nav-unread").textContent = data.stats.unread;
          document.getElementById("showing-count").textContent = data.messages.length;
          document.getElementById("total-count").textContent = data.pagination.total;

          if (data.messages.length === 0) {
            tbody.innerHTML = '<tr><td colspan="8"><div class="table-empty">No messages found</div></td></tr>';
            return;
          }

          renderMessages(data.messages);
        } catch (e) {
          console.error("Error:", e);
          tbody.innerHTML = '<tr><td colspan="8"><div class="table-empty" style="color:#ef4444">Error loading messages</div></td></tr>';
        }
      }

      function renderMessages(messages) {
        const tbody = document.getElementById("messages-tbody");
        tbody.innerHTML = messages.map(msg => `
          <tr class="${msg.status === 'unread' ? 'unread-row' : ''}" data-id="${msg.id}">
            <td><div class="checkbox-wrap">${msg.status === 'unread' ? '<div class="unread-indicator"></div>' : ''}<input type="checkbox" class="checkbox row-checkbox" onclick="event.stopPropagation()"></div></td>
            <td>
              <div class="sender-cell">
                <div class="sender-avatar">${getInitials(msg.first_name, msg.last_name)}</div>
                <div class="sender-info">
                  <div class="sender-name ${msg.status === 'unread' ? 'unread' : ''}">${esc(msg.first_name)} ${esc(msg.last_name)}</div>
                  <div class="sender-email">${esc(msg.email)}</div>
                </div>
              </div>
            </td>
            <td class="date-cell">${fmtDate(msg.created_at)}</td>
            <td>${getStatusBadge(msg.status)}</td>
            <td class="${msg.company ? 'company-cell' : 'company-empty'}">${msg.company ? esc(msg.company) : 'â€”'}</td>
            <td><span class="inquiry-badge">${esc(msg.inquiry_type)}</span></td>
            <td class="message-cell ${msg.status === 'unread' ? 'unread' : ''}">${esc(msg.message)}</td>
            <td>
              <div class="actions-cell">
                <button class="action-btn view" title="View" onclick="event.stopPropagation(); openMessage(${msg.id})">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                </button>
                <button class="action-btn archive" title="Archive" onclick="event.stopPropagation(); quickArchive(${msg.id})">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 8v13H3V8"></path><path d="M1 3h22v5H1z"></path><path d="M10 12h4"></path></svg>
                </button>
              </div>
            </td>
          </tr>
        `).join("");

        tbody.querySelectorAll("tr[data-id]").forEach(row => {
          row.style.cursor = "pointer";
          row.addEventListener("click", () => openMessage(row.dataset.id));
        });
      }

      function getInitials(first, last) {
        return ((first?.[0] || '') + (last?.[0] || '')).toUpperCase() || '?';
      }

      function getStatusBadge(status) {
        const badges = {
          unread: '<span class="status-badge unread"><span class="status-dot"></span>Unread</span>',
          read: '<span class="status-badge read"><span class="status-dot"></span>Read</span>',
          archived: '<span class="status-badge archived"><span class="status-dot"></span>Archived</span>'
        };
        return badges[status] || badges.read;
      }

      function esc(text) {
        if (!text) return "";
        const d = document.createElement("div");
        d.textContent = text;
        return d.innerHTML;
      }

      function fmtDate(str) {
        const d = new Date(str);
        const now = new Date();
        const diff = now - d;
        if (diff < 86400000 && d.getDate() === now.getDate()) {
          return d.toLocaleTimeString("en-US", { hour: "2-digit", minute: "2-digit" });
        }
        return d.toLocaleDateString("en-US", { month: "short", day: "numeric", hour: "2-digit", minute: "2-digit" });
      }

      // Select all
      document.getElementById("select-all").addEventListener("change", function() {
        document.querySelectorAll("#messages-tbody .row-checkbox").forEach(cb => cb.checked = this.checked);
      });

      // Tab filters
      document.querySelectorAll(".table-tab").forEach(tab => {
        tab.addEventListener("click", () => {
          document.querySelectorAll(".table-tab").forEach(t => t.classList.remove("active"));
          tab.classList.add("active");
          currentFilter = tab.dataset.filter;
          loadMessages(currentFilter);
        });
      });

      // Search
      document.getElementById("search-input").addEventListener("input", function() {
        const query = this.value.toLowerCase();
        if (!query) { renderMessages(allMessages); return; }
        const filtered = allMessages.filter(m =>
          m.first_name.toLowerCase().includes(query) ||
          m.last_name.toLowerCase().includes(query) ||
          m.email.toLowerCase().includes(query) ||
          (m.company || '').toLowerCase().includes(query) ||
          m.message.toLowerCase().includes(query)
        );
        renderMessages(filtered);
        document.getElementById("showing-count").textContent = filtered.length;
      });

      // Quick archive
      async function quickArchive(id) {
        try {
          await fetch(`/api/admin/messages/${id}`, {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ status: "archived" }),
          });
          loadMessages(currentFilter);
        } catch (e) { console.error("Error:", e); }
      }

      // Modal
      async function openMessage(id) {
        currentMessageId = id;
        const overlay = document.getElementById("modal-overlay");
        const body = document.getElementById("modal-body");
        body.innerHTML = '<div class="table-loading"><div class="spinner"></div></div>';
        overlay.classList.add("visible");

        try {
          const res = await fetch(`/api/admin/messages/${id}`);
          const data = await res.json();
          const msg = data.message;
          let meta = {};
          try { meta = JSON.parse(msg.metadata || "{}"); } catch (e) {}

          body.innerHTML = `
            <div class="detail-grid">
              <div class="detail-item">
                <div class="detail-label">From</div>
                <div class="detail-value">${esc(msg.first_name)} ${esc(msg.last_name)}</div>
              </div>
              <div class="detail-item">
                <div class="detail-label">Email</div>
                <div class="detail-value"><a href="mailto:${esc(msg.email)}">${esc(msg.email)}</a></div>
              </div>
              ${msg.phone ? `<div class="detail-item"><div class="detail-label">Phone</div><div class="detail-value">${esc(msg.phone)}</div></div>` : ''}
              ${msg.company ? `<div class="detail-item"><div class="detail-label">Company</div><div class="detail-value">${esc(msg.company)}</div></div>` : ''}
              <div class="detail-item">
                <div class="detail-label">Inquiry Type</div>
                <div class="detail-value"><span class="inquiry-badge">${esc(msg.inquiry_type)}</span></div>
              </div>
              <div class="detail-item">
                <div class="detail-label">Received</div>
                <div class="detail-value">${new Date(msg.created_at).toLocaleString()}</div>
              </div>
            </div>
            <div class="message-box">
              <div class="detail-label" style="margin-bottom:0.5rem">Message</div>
              <div class="message-text">${esc(msg.message)}</div>
            </div>
            ${meta.location && (meta.location.city || meta.location.country) ? `
              <div class="meta-box">
                <div class="meta-title">Location Info</div>
                <div class="meta-items">
                  ${meta.location.city ? `<div><span>City:</span> ${esc(meta.location.city)}</div>` : ''}
                  ${meta.location.region ? `<div><span>Region:</span> ${esc(meta.location.region)}</div>` : ''}
                  ${meta.location.country ? `<div><span>Country:</span> ${esc(meta.location.country)}</div>` : ''}
                </div>
              </div>
            ` : ''}
          `;

          document.getElementById("btn-reply").href = `mailto:${msg.email}?subject=Re: Your inquiry to NovintiX`;
          loadMessages(currentFilter);
        } catch (e) {
          console.error(e);
          body.innerHTML = '<div class="table-empty" style="color:#ef4444">Failed to load message</div>';
        }
      }

      function closeModal() { document.getElementById("modal-overlay").classList.remove("visible"); }
      document.getElementById("modal-close").addEventListener("click", closeModal);
      document.getElementById("modal-backdrop").addEventListener("click", closeModal);
      document.addEventListener("keydown", e => { if (e.key === "Escape") closeModal(); });

      document.getElementById("btn-archive").addEventListener("click", async () => { if (currentMessageId) await updateStatus("archived"); });
      document.getElementById("btn-mark-unread").addEventListener("click", async () => { if (currentMessageId) await updateStatus("unread"); });

      async function updateStatus(status) {
        if (!currentMessageId) return;
        try {
          await fetch(`/api/admin/messages/${currentMessageId}`, {
            method: "PATCH",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ status }),
          });
          closeModal();
          loadMessages(currentFilter);
        } catch (e) { console.error("Error:", e); }
      }

      (async () => { if (await checkAuth()) loadMessages(); })();
    </script>
