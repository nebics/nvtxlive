---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/PageHero.astro";
---

<BaseLayout title="Careers" currentPage="/careers">
  <PageHero
    icon="careers"
    title="Life at Novintix"
    description="We are dedicated to creating a brighter future by helping our customers achieve their goals and fostering the aspirations of our team members."
  />

  <section class="intro-section section">
    <div class="container">
      <div class="intro-card">
        <div class="intro-content">
          <h2>Build your career with purpose</h2>
          <p>
            At NovintiX, you'll work alongside industry experts on projects that
            truly matter. We're a team of problem-solvers who help life sciences
            companies bring innovative products to patients faster.
          </p>
          <p>
            Whether you're an experienced professional or starting your career
            journey, we provide the support, mentorship, and meaningful
            opportunities you need to grow and make a difference.
          </p>
          <a href="/careers/apply" class="btn">Explore Opportunities</a>
        </div>
        <div class="intro-image">
          <img
            src="/images/Corporate_Differentiator.jpg"
            alt="Team collaboration"
          />
        </div>
      </div>
    </div>
  </section>

  <section class="benefits-section section section-light">
    <div class="container">
      <div class="section-header">
        <h2>What we offer</h2>
        <p>We invest in our people because your success is our success.</p>
      </div>

      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
          </div>
          <h4>Professional Growth</h4>
          <p>
            Continuous learning, certifications, and mentorship to advance your
            career.
          </p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
          </div>
          <h4>Work-Life Balance</h4>
          <p>
            Flexible arrangements and policies that respect your personal time.
          </p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h4>Great People</h4>
          <p>
            Collaborate with experts in a supportive, inclusive environment.
          </p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <polygon
                points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
              ></polygon>
            </svg>
          </div>
          <h4>Meaningful Work</h4>
          <p>
            Help bring life-saving products to market and make a real
            difference.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section section section-light">
    <div class="container">
      <div class="cta-card">
        <div class="cta-content">
          <h2>Ready to make an impact?</h2>
          <p>
            We're always looking for talented people who want to make a real
            difference in life sciences. Join us in creating a brighter future.
          </p>
        </div>
        <div class="cta-actions">
          <a href="mailto:careers@novintix.com" class="btn">Get In Touch</a>
          <a href="/contact-us" class="btn btn-outline">Contact Us</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .intro-section {
    background: #fff;
  }

  .intro-card {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: center;
    background: var(--color-bg-surface);
    border-radius: var(--radius-xl);
    padding: 3rem;
  }

  .intro-content h2 {
    margin-bottom: 1.25rem;
  }

  .intro-content p {
    color: var(--color-text-muted);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .intro-content p:last-of-type {
    margin-bottom: 0;
  }

  .intro-content .btn {
    margin-top: 1.5rem;
  }

  .intro-image {
    position: relative;
    height: 100%;
    min-height: 320px;
  }

  .intro-image img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--radius-lg);
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-header h2 {
    margin-bottom: 0.75rem;
  }

  .section-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .benefit-card {
    background: var(--color-bg-main);
    border-radius: var(--radius-lg);
    padding: 2rem;
    text-align: center;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all var(--transition-base);
  }

  .benefit-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: transparent;
  }

  .benefit-icon {
    width: 56px;
    height: 56px;
    background: var(--gradient-brand);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin: 0 auto 1.25rem;
  }

  .benefit-card h4 {
    margin-bottom: 0.75rem;
  }

  .benefit-card p {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Openings Section */
  .openings-section {
    background: #fff;
  }

  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .section-header-center h2 {
    margin-bottom: 1rem;
  }

  .section-header-center p {
    color: var(--color-text-muted);
    font-size: 1.0625rem;
    line-height: 1.7;
  }

  .openings-placeholder {
    display: flex;
    justify-content: center;
  }

  .openings-card {
    background: #0f172a;
    border-radius: var(--radius-xl);
    padding: 4rem;
    text-align: center;
    max-width: 500px;
  }

  .openings-icon {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin: 0 auto 1.5rem;
  }

  .openings-card h3 {
    color: #fff;
    margin-bottom: 1rem;
  }

  .openings-card p {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .cta-section {
    background: var(--color-bg-surface);
  }

  .cta-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3rem;
    background: #0f172a;
    border-radius: var(--radius-xl);
    padding: 3rem 4rem;
  }

  .cta-content {
    max-width: 500px;
  }

  .cta-content h2 {
    color: #fff;
    margin-bottom: 0.75rem;
    font-size: 1.75rem;
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.7);
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    flex-shrink: 0;
  }

  .cta-actions .btn-outline {
    border-color: rgba(255, 255, 255, 0.3);
    color: #fff;
  }

  .cta-actions .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 1024px) {
    .intro-card {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem;
    }

    .intro-image {
      order: -1;
      min-height: 280px;
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .cta-card {
      flex-direction: column;
      text-align: center;
      padding: 3rem;
    }

    .cta-actions {
      flex-direction: column;
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .benefits-grid {
      grid-template-columns: 1fr;
    }

    .intro-image {
      min-height: 220px;
    }

    .cta-card {
      padding: 2rem;
    }
  }
</style>
