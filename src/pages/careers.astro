---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/PageHero.astro";

const benefits = [
  {
    title: "Professional Growth",
    desc: "Continuous learning, certifications, and mentorship programs designed to advance your career trajectory.",
    icon: "trending-up",
  },
  {
    title: "Work-Life Balance",
    desc: "Flexible working arrangements and policies that respect your personal time and well-being.",
    icon: "clock",
  },
  {
    title: "Great People",
    desc: "Collaborate with industry experts in a supportive, inclusive, and innovative environment.",
    icon: "users",
  },
  {
    title: "Meaningful Work",
    desc: "Contribute to projects that bring life-saving medical products to patients faster.",
    icon: "heart",
  },
];
---

<BaseLayout
  title="Careers"
  currentPage="/careers"
  footerCtaTitlePrefix="Ready to"
  footerCtaTitleHighlight="make an impact?"
  footerCtaButtonText="View Open Positions"
  footerCtaButtonLink="/careers/apply"
  footerCtaSecondaryButtonText="Email Resume"
  footerCtaSecondaryButtonLink="mailto:careers@novintix.com"
>
  <PageHero
    icon="careers"
    title="Life at NovintiX"
    description="Join a team of problem-solvers dedicated to transforming labor into innovation for the life sciences industry."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Our Culture</span>
          <h2>Build Your Career With Purpose</h2>
          <p class="lead">
            At NovintiX, you'll work alongside industry experts on projects that
            truly matter. We're a team of innovators who help life sciences
            companies bring vital products to patients.
          </p>
          <p class="text-secondary">
            Whether you're an experienced professional or starting your career
            journey, we provide the support, mentorship, and meaningful
            opportunities you need to grow and make a difference.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <!-- Users/Team Icon -->
              <svg
                width="48"
                height="48"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>Why Join Us?</h2>
        <p>We invest in our people because your success is our success.</p>
      </div>

      <div class="solutions-grid">
        {
          benefits.map((benefit) => (
            <div class="solution-card">
              <div class="icon-box">
                {benefit.icon === "trending-up" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18" />
                    <polyline points="17 6 23 6 23 12" />
                  </svg>
                )}
                {benefit.icon === "clock" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </svg>
                )}
                {benefit.icon === "users" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </svg>
                )}
                {benefit.icon === "heart" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                  </svg>
                )}
              </div>
              <h3>{benefit.title}</h3>
              <p>{benefit.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Shared Scoped Styles --- */
  .section {
    padding: 6rem 0;
    position: relative;
  }
  .section-darker {
    background: #f1f5f9; /* Light Gray */
  }

  /* Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: var(--color-text-main);
  }
  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  .feature-content .text-secondary {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }
  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(14, 165, 233, 0.1);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }
  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #fff; /* White bg for icon */
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(14, 165, 233, 0.15); /* Soft blue shadow */
    border: 1px solid var(--color-border);
  }
  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(14, 165, 233, 0.3);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }
  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(14, 165, 233, 0.1) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }
  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-main);
  }
  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 columns for benefits */
    gap: 1.5rem;
  }
  .solution-card {
    background: #fff;
    border: 1px solid var(--color-border);
    padding: 2rem;
    border-radius: 1rem;
    text-align: center; /* Centered benefits */
    transition:
      transform 0.3s ease,
      background 0.3s ease;
    box-shadow: var(--shadow-sm);
  }
  .solution-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent-primary);
    box-shadow: var(--shadow-lg);
  }
  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(14, 165, 233, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin: 0 auto 1.5rem; /* Centered icon */
  }
  .solution-card h3 {
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-main);
    font-weight: 600;
  }
  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }
  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }
  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  .btn-outline {
    border: 1px solid var(--color-accent-primary);
    background: transparent;
    color: var(--color-accent-primary);
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s;
    text-decoration: none;
    display: inline-block;
  }
  .btn-outline:hover {
    background: var(--color-accent-primary);
    color: #fff;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .feature-content {
      order: 2;
    }
    .feature-visual {
      order: 1;
    }
    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 2rem;
    }
    .cta-actions {
      flex-direction: column;
    }
    .btn-outline {
      width: 100%;
      text-align: center;
    }
  }
</style>
