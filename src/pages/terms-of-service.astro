<style>
    .section {
        padding: 6rem 0;
    }
    .section-darker {
        background: #f1f5f9; /* Light Gray */
    }

    .legal-content {
        background: #ffffff;
        border-radius: var(--radius-lg);
        padding: 4rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--color-border);
        max-width: 900px;
        margin: 0 auto;
    }

    .prose {
        color: var(--color-text-secondary);
    }

    .updated-date {
        display: block;
        font-size: 0.875rem;
        color: var(--color-text-muted);
        margin-bottom: 2rem;
        font-style: italic;
    }

    h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-text-main);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
    }

    p {
        margin-bottom: 1.5rem;
        line-height: 1.7;
        font-size: 1.0625rem;
    }

    ul {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    li {
        margin-bottom: 0.5rem;
        padding-left: 0.5rem;
    }

    li::marker {
        color: var(--color-accent-primary);
    }

    @media (max-width: 768px) {
        .legal-content {
            padding: 2rem;
        }
    }
</style>
