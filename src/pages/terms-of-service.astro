<style>
  .legal-section {
    background: #fff;
  }

  .legal-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .legal-updated {
    color: var(--color-muted);
    font-size: 0.9375rem;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .legal-block {
    margin-bottom: 2.5rem;
  }

  .legal-block h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .legal-block h3 {
    font-size: 1.125rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-dark);
  }

  .legal-block p {
    color: var(--color-muted);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .legal-block ul,
  .legal-block ol {
    margin: 1rem 0 1.5rem 1.5rem;
    color: var(--color-muted);
  }

  .legal-block li {
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 0.5rem;
  }

  .legal-block a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .legal-block a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .contact-info {
    background: var(--color-light);
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    margin-top: 1rem;
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  .contact-info p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .legal-block h2 {
      font-size: 1.25rem;
    }

    .legal-block h3 {
      font-size: 1rem;
    }
  }
</style>
