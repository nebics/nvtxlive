---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";

const services = [
  {
    title: "Value Engineering",
    desc: "Maximize efficiency and cost-effectiveness through strategic process optimization and value analysis.",
    icon: "trending-up",
  },
  {
    title: "Supplier Optimization",
    desc: "Enhance supplier relationships and performance to improve quality, reduce risk, and drive innovation.",
    icon: "users",
  },
  {
    title: "Cold Chain Logistics",
    desc: "Ensure product integrity during transport with specialized temperature-controlled supply chain solutions.",
    icon: "thermometer", // Abstract representation
  },
  {
    title: "Asset Tracking",
    desc: "Real-time visibility into inventory and equipment location for improved utilization and reduced loss.",
    icon: "map-pin",
  },
  {
    title: "Risk Management",
    desc: "Proactive identification and mitigation of supply chain disruptions to ensure business continuity.",
    icon: "shield",
  },
  {
    title: "Master Data Management",
    desc: "Ensure data accuracy and consistency across the entire supply chain ecosystem for better decision making.",
    icon: "database",
  },
];
---

<BaseLayout
  title="Supply Chain"
  currentPage="/services/supply-chain"
  footerCtaTitlePrefix="Strengthen your"
  footerCtaTitleHighlight="supply chain resilience?"
  footerCtaButtonText="Optimize Now"
>
  <PageHero
    icon="services"
    title="Supply Chain Excellence"
    description="Build agile, resilient supply chains through cross-functional collaboration and digital integration."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Operational Resilience</span>
          <h2>Optimize Your Value Chain</h2>
          <p class="lead">
            The industry's ability to adapt requires a shift from isolated
            departments to resilience through cross-functional collaboration. We
            bring together R&D, manufacturing, quality, and logistics to
            maximize efficiency and enhance product value.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <!-- Truck/Logistics Icon -->
              <svg
                width="48"
                height="48"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <rect x="1" y="3" width="15" height="13"></rect>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>End-to-End Solutions</h2>
        <p>
          From procurement to delivery, we optimize every link in the chain.
        </p>
      </div>

      <div class="solutions-grid">
        {
          services.map((service) => (
            <div class="solution-card">
              <div class="icon-box">
                {service.icon === "trending-up" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="23 6 13.5 15.5 8.5 10.5 1 18" />
                    <polyline points="17 6 23 6 23 12" />
                  </svg>
                )}
                {service.icon === "users" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </svg>
                )}
                {service.icon === "thermometer" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M14 14.76V3.5a2.5 2.5 0 0 0-5 0v11.26a4.5 4.5 0 1 0 5 0z" />
                  </svg>
                )}
                {service.icon === "map-pin" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                    <circle cx="12" cy="10" r="3" />
                  </svg>
                )}
                {service.icon === "shield" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                  </svg>
                )}
                {service.icon === "database" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <ellipse cx="12" cy="5" rx="9" ry="3" />
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3" />
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5" />
                  </svg>
                )}
              </div>
              <h3>{service.title}</h3>
              <p>{service.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Shared Scoped Styles (Same as Digital Solutions) --- */
  .section {
    padding: 6rem 0;
    position: relative;
  }
  .section-darker {
    background: rgba(0, 0, 0, 0.2);
  }

  /* Two Column Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: #fff;
  }
  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }
  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(56, 189, 248, 0.1);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }
  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #0f172a;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }
  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(56, 189, 248, 0.15) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }
  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }
  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .solution-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 1rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
  }
  .solution-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.1);
  }
  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin-bottom: 1.5rem;
  }
  .solution-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: #fff;
    font-weight: 600;
  }
  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .feature-content {
      order: 2;
    }
    .feature-visual {
      order: 1;
    }
    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 2rem;
    }
  }
</style>
