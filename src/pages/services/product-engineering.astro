---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";

const capabilities = [
  {
    title: "Embedded Systems",
    desc: "Firmware & PCB Design for high-reliability medical devices.",
    icon: "cpu",
  },
  {
    title: "Mobile & Cloud",
    desc: "Secure, HIPAA-compliant apps and cloud infrastructure.",
    icon: "cloud",
  },
  {
    title: "AI & Analytics",
    desc: "Edge AI for diagnostics and predictive maintenance.",
    icon: "activity",
  },
  {
    title: "IoMT Connectivity",
    desc: "BLE, Wi-Fi, and Cellular integration for connected care.",
    icon: "wifi",
  },
  {
    title: "Verification & Validation",
    desc: "Automated testing frameworks ensuring regulatory compliance.",
    icon: "check-circle",
  },
  {
    title: "Human Factors",
    desc: "User-centric design meeting IEC 62366 standards.",
    icon: "users",
  },
];

const processSteps = [
  {
    step: "01",
    title: "Discovery & Regulatory Strategy",
    desc: "We start by defining the clinical need, user requirements, and regulatory pathway (510(k), PMA, MDR).",
  },
  {
    step: "02",
    title: "Architecture & Design",
    desc: "Create robust system architectures (Hardware, Software, Mechanical) prioritizing safety and scalability.",
  },
  {
    step: "03",
    title: "Agile Development",
    desc: "Iterative development sprints with continuous integration and automated testing to reduce risk.",
  },
  {
    step: "04",
    title: "V&V and Transfer",
    desc: "Rigorous verification, validation, and seamless design transfer to manufacturing partners.",
  },
];
---

<BaseLayout
  title="Product Engineering & Discovery"
  currentPage="/services/product-engineering"
>
  <PageHero
    icon="services"
    title="Product Engineering & Discovery"
    description="Energize your R&D teams through our innovative approach to product development. We combine deep industry knowledge with cutting-edge technology to accelerate your product journey from concept to market."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="intro-grid">
        <div class="intro-content">
          <h2 class="section-title">
            Innovate with <span class="text-gradient">confidence</span>
          </h2>
          <p class="section-lead">
            The future of growth depends on transforming business models,
            execution processes, and products to meet evolving customer demands.
          </p>
          <p class="text-muted">
            The development of new offerings using smart connected products,
            embedded devices, IoT, analytics, and telemetry has become critical.
            We help you navigate this complexity.
          </p>
        </div>
        <div class="intro-stat glass-panel">
          <span class="stat-number">50+</span>
          <span class="stat-label">Medical Devices Cleared</span>
          <p class="stat-desc">
            Accelerating time-to-market for Class I, II, and III devices.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities Grid -->
  <section class="section">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h6>Our Expertise</h6>
        <h2>Core Capabilities</h2>
      </div>

      <div class="capabilities-grid">
        {
          capabilities.map((cap) => (
            <div class="cap-card glass-panel">
              <div class="cap-icon-wrapper">
                {/* Icons based on cap.icon */}
                {cap.icon === "cpu" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <rect x="4" y="4" width="16" height="16" rx="2" ry="2" />
                    <rect x="9" y="9" width="6" height="6" />
                    <line x1="9" y1="1" x2="9" y2="4" />
                    <line x1="15" y1="1" x2="15" y2="4" />
                    <line x1="9" y1="20" x2="9" y2="23" />
                    <line x1="15" y1="20" x2="15" y2="23" />
                    <line x1="20" y1="9" x2="23" y2="9" />
                    <line x1="20" y1="14" x2="23" y2="14" />
                    <line x1="1" y1="9" x2="4" y2="9" />
                    <line x1="1" y1="14" x2="4" y2="14" />
                  </svg>
                )}
                {cap.icon === "cloud" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z" />
                  </svg>
                )}
                {cap.icon === "activity" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                  </svg>
                )}
                {cap.icon === "wifi" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                    <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                    <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                    <line x1="12" y1="20" x2="12.01" y2="20" />
                  </svg>
                )}
                {cap.icon === "check-circle" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                    <polyline points="22 4 12 14.01 9 11.01" />
                  </svg>
                )}
                {cap.icon === "users" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </svg>
                )}
              </div>
              <h4>{cap.title}</h4>
              <p>{cap.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="section">
    <div class="container relative z-10">
      <h3 class="section-header-center">Our Development Process</h3>

      <div class="process-timeline">
        <div class="timeline-line"></div>
        {
          processSteps.map((step, index) => (
            <div class={`timeline-item ${index % 2 === 0 ? "left" : "right"}`}>
              <div class="timeline-dot" />
              <div class="timeline-content glass-panel">
                <span class="step-num">{step.step}</span>
                <h4>{step.title}</h4>
                <p>{step.desc}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Intro */
  .intro-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .section-lead {
    font-size: 1.25rem;
    color: var(--color-text-main);
    margin-bottom: 1.5rem;
  }

  .text-muted {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .intro-stat {
    padding: 3rem;
    text-align: center;
    border-radius: var(--radius-xl);
    border: 1px solid rgba(56, 189, 248, 0.2);
    background: radial-gradient(
      circle at center,
      rgba(56, 189, 248, 0.1),
      transparent 70%
    );
  }

  .stat-number {
    display: block;
    font-size: 4rem;
    font-weight: 800;
    color: var(--color-accent-primary);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    display: block;
    font-size: 1.125rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-desc {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  /* Capabilities Grid */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    padding-top: 3rem;
  }

  .cap-card {
    padding: 2rem;
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.03);
    transition: all 0.3s;
    height: 100%;
  }

  .cap-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .cap-icon-wrapper {
    width: 48px;
    height: 48px;
    background: rgba(56, 189, 248, 0.1);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin-bottom: 1.5rem;
  }

  .cap-card h4 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #fff;
  }

  .cap-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    font-size: 0.9375rem;
  }

  /* Process Timeline */
  .section-header-center {
    text-align: center;
    margin-bottom: 4rem;
  }
  .section-header-center h6 {
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
  }

  .process-timeline {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--color-accent-primary),
      transparent
    );
    transform: translateX(-50%);
  }

  .timeline-item {
    display: flex;
    justify-content: center;
    position: relative;
    margin-bottom: 3rem;
  }

  .timeline-dot {
    position: absolute;
    left: 50%;
    top: 2rem;
    width: 16px;
    height: 16px;
    background: var(--color-accent-primary);
    border-radius: 50%;
    transform: translateX(-50%);
    box-shadow: 0 0 20px var(--color-accent-primary);
    z-index: 2;
  }

  .timeline-content {
    width: 45%;
    padding: 2rem;
    border-radius: var(--radius-lg);
    position: relative;
  }

  .timeline-item.left {
    justify-content: flex-start;
  }

  .timeline-item.right {
    justify-content: flex-end;
  }

  .timeline-item.left .timeline-content {
    margin-right: auto;
  }

  .timeline-item.right .timeline-content {
    margin-left: auto;
  }

  .step-num {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(56, 189, 248, 0.1);
    color: var(--color-accent-primary);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .timeline-content h4 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .timeline-content p {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .intro-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .capabilities-grid {
      grid-template-columns: 1fr;
    }

    .timeline-line {
      left: 20px;
    }

    .timeline-item {
      justify-content: flex-start !important;
      padding-left: 50px;
    }

    .timeline-dot {
      left: 20px;
    }

    .timeline-content {
      width: 100%;
    }
  }

  .p-16 {
    padding: 4rem;
  }
  .rounded-3xl {
    border-radius: 1.5rem;
  }
  .inline-block {
    display: inline-block;
  }
  .max-w-4xl {
    max-width: 56rem;
  }
  .mt-8 {
    margin-top: 2rem;
  }

  .cta-sub {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-top: 1rem;
    line-height: 1.6;
  }
</style>
