---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";

const services = [
  {
    title: "Clinical Strategy",
    desc: "Expert development planning and regulatory pathway analysis to optimize your clinical trial approach.",
    icon: "map",
  },
  {
    title: "Study Design",
    desc: "Robust protocol development and statistical analysis plans to ensure successful trial outcomes.",
    icon: "file-text",
  },
  {
    title: "CER Development",
    desc: "Clinical Evaluation Reports aligned with EU MDR requirements, including systematic literature reviews.",
    icon: "book-open",
  },
  {
    title: "Stakeholder Engagement",
    desc: "Connect effectively with payers, providers, and patients to communicate your product's value.",
    icon: "users",
  },
  {
    title: "HTA & Reimbursement",
    desc: "Preparation for Health Technology Assessments and payer negotiations to secure market access.",
    icon: "dollar-sign",
  },
  {
    title: "Post-Market Follow-up",
    desc: "PMCF planning and execution to maintain compliance throughout your product's lifecycle.",
    icon: "activity",
  },
  {
    title: "Regulatory Submissions",
    desc: "Comprehensive support for IDE, 510(k), PMA, and CE marking clinical submissions.",
    icon: "file-check",
  },
  {
    title: "Literature Reviews",
    desc: "Systematic searches and in-depth analysis to support your clinical and regulatory strategy.",
    icon: "search",
  },
  {
    title: "Real-World Evidence",
    desc: "Generation and analysis of real-world data to demonstrate safety and efficacy post-launch.",
    icon: "database",
  },
];
---

<BaseLayout
  title="Clinical Affairs"
  currentPage="/services/clinical-affairs"
  footerCtaTitlePrefix="Accelerate your"
  footerCtaTitleHighlight="clinical success?"
  footerCtaButtonText="Start Conversation"
>
  <PageHero
    icon="services"
    title="Clinical Excellence"
    description="Orchestrating your journey from clinical development to market entry with evidence-based strategies."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Evidence-Based</span>
          <h2>Showcase Your Value</h2>
          <p class="lead">
            Payers and regulatory authorities demand comprehensive evidence. We
            help you orchestrate your journey from development to market entry,
            showcasing the distinctive value and outcomes your innovations offer
            to providers, patients, and healthcare systems.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <!-- Heartbeat/Medical Icon -->
              <svg
                width="48"
                height="48"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>Full-Spectrum Support</h2>
        <p>Comprehensive clinical services for every stage of development.</p>
      </div>

      <div class="solutions-grid">
        {
          services.map((service) => (
            <div class="solution-card">
              <div class="icon-box">
                {service.icon === "map" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6" />
                    <line x1="8" y1="2" x2="8" y2="18" />
                    <line x1="16" y1="6" x2="16" y2="22" />
                  </svg>
                )}
                {service.icon === "file-text" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="16" y1="13" x2="8" y2="13" />
                    <line x1="16" y1="17" x2="8" y2="17" />
                    <polyline points="10 9 9 9 8 9" />
                  </svg>
                )}
                {service.icon === "book-open" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
                  </svg>
                )}
                {service.icon === "users" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                  </svg>
                )}
                {service.icon === "dollar-sign" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <line x1="12" y1="1" x2="12" y2="23" />
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" />
                  </svg>
                )}
                {service.icon === "activity" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                  </svg>
                )}
                {service.icon === "file-check" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <path d="m9 15 2 2 4-4" />
                  </svg>
                )}
                {service.icon === "search" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="11" cy="11" r="8" />
                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                  </svg>
                )}
                {service.icon === "database" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <ellipse cx="12" cy="5" rx="9" ry="3" />
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3" />
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5" />
                  </svg>
                )}
              </div>
              <h3>{service.title}</h3>
              <p>{service.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Shared Scoped Styles --- */
  .section {
    padding: 6rem 0;
    position: relative;
  }
  .section-darker {
    background: rgba(0, 0, 0, 0.2);
  }

  /* Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: #fff;
  }
  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }
  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(56, 189, 248, 0.1);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }
  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #0f172a;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }
  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(56, 189, 248, 0.15) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }
  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }
  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .solution-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 1rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
  }
  .solution-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.1);
  }
  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin-bottom: 1.5rem;
  }
  .solution-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: #fff;
    font-weight: 600;
  }
  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .feature-content {
      order: 2;
    }
    .feature-visual {
      order: 1;
    }
    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 2rem;
    }
  }
</style>
