---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";

const services = [
  {
    title: "Quality Management Systems",
    desc: "Design and implementation of robust QMS tailored to ISO 13485 and FDA 21 CFR Part 820 standards.",
    icon: "shield-check",
  },
  {
    title: "Regulatory Strategy",
    desc: "Comprehensive roadmaps for global market access, including FDA clearance/approval and CE marking.",
    icon: "compass",
  },
  {
    title: "Audit Readiness",
    desc: "Mock inspections and preparation services for FDA, Notified Body, and MDSAP audits.",
    icon: "file-check",
  },
  {
    title: "CAPA Management",
    desc: "Effective corrective and preventive action systems to drive continuous improvement and compliance.",
    icon: "refresh",
  },
  {
    title: "Risk Management",
    desc: "ISO 14971-compliant risk analysis and management strategies throughout the product lifecycle.",
    icon: "alert-triangle",
  },
  {
    title: "Post-Market Surveillance",
    desc: "Ongoing monitoring and vigilance reporting to maintain compliance and ensure patient safety.",
    icon: "eye",
  },
];
---

<BaseLayout
  title="Quality & Compliance"
  currentPage="/services/quality-regulatory-compliance"
  footerCtaTitlePrefix="Ensure global"
  footerCtaTitleHighlight="compliance and quality?"
  footerCtaButtonText="Get Compliance Support"
>
  <PageHero
    icon="services"
    title="Quality & Regulatory"
    description="Streamline operations, reduce risks, and stay compliant with evolving global requirements."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Streamlines & Secure</span>
          <h2>Integrated Compliance</h2>
          <p class="lead">
            Quality management impacts every facet of your business. We
            consolidate quality operations into an efficient enterprise
            platform, reducing risk while accelerating new product introductions
            and improving patient safety.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <!-- Shield/Check Icon -->
              <svg
                width="48"
                height="48"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                <path d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>Compliance Solutions</h2>
        <p>Expert guidance through the complex regulatory landscape.</p>
      </div>

      <div class="solutions-grid">
        {
          services.map((service) => (
            <div class="solution-card">
              <div class="icon-box">
                {service.icon === "shield-check" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                    <polyline points="9 12 11 14 15 10" />
                  </svg>
                )}
                {service.icon === "compass" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76" />
                  </svg>
                )}
                {service.icon === "file-check" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <path d="m9 15 2 2 4-4" />
                  </svg>
                )}
                {service.icon === "refresh" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="23 4 23 10 17 10" />
                    <polyline points="1 20 1 14 7 14" />
                    <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15" />
                  </svg>
                )}
                {service.icon === "alert-triangle" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                    <line x1="12" y1="9" x2="12" y2="13" />
                    <line x1="12" y1="17" x2="12.01" y2="17" />
                  </svg>
                )}
                {service.icon === "eye" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                    <circle cx="12" cy="12" r="3" />
                  </svg>
                )}
              </div>
              <h3>{service.title}</h3>
              <p>{service.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container text-center relative z-10">
      <div class="cta-box">
        <h2>Mitigate risk, ensure quality</h2>
        <p>Partner with us to navigate the complex regulatory environment.</p>
        <a href="/contact-us" class="btn btn-primary">Start Compliance Review</a
        >
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Shared Scoped Styles --- */
  .section {
    padding: 6rem 0;
    position: relative;
  }
  .section-darker {
    background: rgba(0, 0, 0, 0.2);
  }

  /* Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: #fff;
  }
  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }
  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(56, 189, 248, 0.1);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }
  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #0f172a;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }
  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(56, 189, 248, 0.15) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }
  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }
  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .solution-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 1rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
  }
  .solution-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.1);
  }
  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(56, 189, 248, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin-bottom: 1.5rem;
  }
  .solution-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: #fff;
    font-weight: 600;
  }
  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .feature-content {
      order: 2;
    }
    .feature-visual {
      order: 1;
    }
    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 2rem;
    }
  }
</style>
