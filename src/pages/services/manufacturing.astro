---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";

const services = [
  {
    title: "Digital Twin",
    desc: "Create virtual replicas of physical systems to simulate production scenarios and optimize performance before implementation.",
    icon: "layers",
  },
  {
    title: "Industrial IoT",
    desc: "Connect machines, devices, and sensors for real-time visibility and data-driven operational decision making.",
    icon: "wifi",
  },
  {
    title: "Smart Factory",
    desc: "Build autonomous, connected manufacturing ecosystems with integrated Industry 4.0 technologies.",
    icon: "cpu",
  },
  {
    title: "Edge Computing",
    desc: "Process data locally at the source to reduce latency and enable real-time control of manufacturing processes.",
    icon: "server",
  },
  {
    title: "Predictive Maintenance",
    desc: "Use AI/ML to predict equipment failures before they happen, reducing downtime and maintenance costs.",
    icon: "activity",
  },
  {
    title: "Process Automation",
    desc: "Streamline workflows and reduce manual intervention through intelligent robotic process automation.",
    icon: "settings",
  },
];
---

<BaseLayout
  title="Manufacturing"
  currentPage="/services/manufacturing"
  footerCtaTitlePrefix="Modernize your"
  footerCtaTitleHighlight="manufacturing operations?"
  footerCtaButtonText="Start Transformation"
>
  <PageHero
    icon="services"
    title="Manufacturing 4.0"
    description="Accelerate time-to-market with smart factory solutions and digital manufacturing technologies."
  />

  <section class="section">
    <div class="container relative z-10">
      <div class="feature-row">
        <div class="feature-content">
          <span class="badge">Future of Production</span>
          <h2>The Autonomous Factory</h2>
          <p class="lead">
            Production unfolds first in the virtual realm before manifesting
            physically. We empower operators with real-time data for
            optimization, equipment maintenance, and plant upkeep aligned with
            ESG and lean manufacturing objectives.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-card-abstract">
            <div class="abstract-icon">
              <!-- Factory Icon -->
              <svg
                width="48"
                height="48"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path d="M2 22h20V2L2 22z" opacity="0.5"></path>
                <path
                  d="M6 18h4v-4H6v4zm0-6h4V8H6v4zm6 6h4v-4h-4v4zm0-6h4V8h-4v4z"
                ></path>
                <path d="M18 22V2l-4 4-4-4-4 4-4-4v20"></path>
              </svg>
            </div>
            <div class="abstract-ring"></div>
            <div class="abstract-glow"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-darker">
    <div class="container relative z-10">
      <div class="section-header-center">
        <h2>Manufacturing Capabilities</h2>
        <p>Building the digital foundation for precision at scale.</p>
      </div>

      <div class="solutions-grid">
        {
          services.map((service) => (
            <div class="solution-card">
              <div class="icon-box">
                {service.icon === "layers" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polygon points="12 2 2 7 12 12 22 7 12 2" />
                    <polyline points="2 17 12 22 22 17" />
                    <polyline points="2 12 12 17 22 12" />
                  </svg>
                )}
                {service.icon === "wifi" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12.55a11 11 0 0 1 14.08 0" />
                    <path d="M1.42 9a16 16 0 0 1 21.16 0" />
                    <path d="M8.53 16.11a6 6 0 0 1 6.95 0" />
                    <line x1="12" y1="20" x2="12.01" y2="20" />
                  </svg>
                )}
                {service.icon === "cpu" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <rect x="4" y="4" width="16" height="16" rx="2" ry="2" />
                    <rect x="9" y="9" width="6" height="6" />
                    <line x1="9" y1="1" x2="9" y2="4" />
                    <line x1="15" y1="1" x2="15" y2="4" />
                    <line x1="9" y1="20" x2="9" y2="23" />
                  </svg>
                )}
                {service.icon === "server" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <rect x="2" y="2" width="20" height="8" rx="2" ry="2" />
                    <rect x="2" y="14" width="20" height="8" rx="2" ry="2" />
                    <line x1="6" y1="6" x2="6.01" y2="6" />
                    <line x1="6" y1="18" x2="6.01" y2="18" />
                  </svg>
                )}
                {service.icon === "activity" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                  </svg>
                )}
                {service.icon === "settings" && (
                  <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="12" cy="12" r="3" />
                    <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                  </svg>
                )}
              </div>
              <h3>{service.title}</h3>
              <p>{service.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* --- Shared Scoped Styles --- */
  .section {
    padding: 6rem 0;
    position: relative;
  }
  .section-darker {
    background: #f1f5f9; /* Light Gray */
  }

  /* Feature Row */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  .feature-content h2 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    color: var(--color-text-main);
  }
  .feature-content .lead {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }
  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-accent-primary);
    color: var(--color-accent-primary);
    border-radius: 50px;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    background: rgba(14, 165, 233, 0.1);
  }

  /* Visual Abstract Card */
  .feature-visual {
    display: flex;
    justify-content: center;
  }
  .visual-card-abstract {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .abstract-icon {
    width: 100px;
    height: 100px;
    background: #fff; /* White icon bg */
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    position: relative;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(14, 165, 233, 0.15); /* Soft blue shadow */
    border: 1px solid var(--color-border);
  }
  .abstract-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 2px dashed rgba(14, 165, 233, 0.3);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
    z-index: 1;
  }
  .abstract-glow {
    position: absolute;
    width: 150%;
    height: 150%;
    background: radial-gradient(
      circle,
      rgba(14, 165, 233, 0.1) 0%,
      transparent 60%
    );
    filter: blur(40px);
    z-index: 0;
  }
  @keyframes rotate {
    to {
      transform: rotate(360deg);
    }
  }

  /* Solutions Grid */
  .section-header-center {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 5rem;
  }
  .section-header-center h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-main);
  }
  .section-header-center p {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  .solution-card {
    background: #fff;
    border: 1px solid var(--color-border);
    padding: 2.5rem;
    border-radius: 1rem;
    transition:
      transform 0.3s ease,
      background 0.3s ease;
    box-shadow: var(--shadow-sm);
  }
  .solution-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent-primary);
    box-shadow: var(--shadow-lg);
  }
  .icon-box {
    width: 48px;
    height: 48px;
    background: rgba(14, 165, 233, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent-primary);
    margin-bottom: 1.5rem;
  }
  .solution-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-main);
    font-weight: 600;
  }
  .solution-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  /* CTA Box */
  .cta-box {
    background: var(--gradient-glass);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem;
    border-radius: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }
  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .cta-box p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    font-size: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .feature-content {
      order: 2;
    }
    .feature-visual {
      order: 1;
    }
    .solutions-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 640px) {
    .solutions-grid {
      grid-template-columns: 1fr;
    }
    .cta-box {
      padding: 2rem;
    }
  }
</style>
