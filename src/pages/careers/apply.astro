---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";
---

<BaseLayout title="Open Positions" currentPage="/careers">
  <PageHero
    icon="careers"
    title="Open Positions"
    description="Find your next opportunity at NovintiX."
  />

  <section class="jobs-section section">
    <div class="container">
      <div class="jobs-intro">
        <p>
          We're always looking for talented professionals who share our passion
          for life sciences. Browse current openings below or send us your
          resume directly.
        </p>
      </div>

      <div class="jobs-widget">
        <div id="example-widget-container"></div>
      </div>

      <div class="jobs-fallback">
        <div class="fallback-content">
          <h3>Don't see a perfect fit?</h3>
          <p>
            We'd still love to hear from you. Send us your resume and we'll
            reach out when a suitable position opens.
          </p>
        </div>
        <a href="mailto:careers@novintix.com" class="btn">Send Your Resume</a>
      </div>
    </div>
  </section>
</BaseLayout>

<script
  type="text/javascript"
  src="https://jobsapi.ceipal.com/APISource/widget.js"
  data-ceipal-api-key="ZmlYbU9kMTBTdXJVUDVwTFByWW1xQT09"
  data-ceipal-career-portal-id="Z3RkUkt2OXZJVld2MjFpOVRSTXoxZz09"></script>

<style>
  .jobs-section {
    background: #fff;
  }

  .jobs-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .jobs-intro p {
    color: var(--color-text-muted);
    font-size: 1.0625rem;
    line-height: 1.7;
  }

  .jobs-widget {
    min-height: 400px;
    background: var(--color-bg-surface);
    border-radius: var(--radius-xl);
    padding: 2rem;
    margin-bottom: 3rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  /* Style overrides for CEIPAL widget */
  .jobs-widget :global(.ceipal-widget) {
    font-family: inherit;
  }

  .jobs-widget :global(.ceipal-job-title) {
    color: var(--color-text-main);
    font-family: inherit;
  }

  .jobs-widget :global(.ceipal-apply-btn) {
    background: var(--gradient-brand);
    border-radius: var(--radius-full);
    border: none;
  }

  .jobs-fallback {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 2.5rem;
    background: #0f172a;
    border-radius: var(--radius-xl);
  }

  .fallback-content h3 {
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .fallback-content p {
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .jobs-fallback .btn {
    flex-shrink: 0;
    background: var(--color-bg-main);
    color: var(--color-text-main);
  }

  .jobs-fallback .btn:hover {
    background: var(--color-bg-surface);
  }

  @media (max-width: 768px) {
    .jobs-widget {
      padding: 1rem;
    }

    .jobs-fallback {
      flex-direction: column;
      text-align: center;
    }

    .jobs-fallback .btn {
      width: 100%;
    }
  }
</style>
